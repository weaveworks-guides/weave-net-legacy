{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "",
    "source_ami": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "source_ami": "{{user `source_ami`}}",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "Weaveworks ECS Image ({{isotime \"2006-01-02\"}})",
    "communicator": "ssh",
    "ssh_pty": true
  }],

  "provisioners": [{
    "type": "file",
    "source": "to-upload/ecs-init-1.3.0-1.el7.centos.x86_64.rpm",
    "destination": "/home/ec2-user/ecs-init-1.3.0-1.el7.centos.x86_64.rpm"
  }, {
    "type": "file",
    "source": "to-upload/weave.tar",
    "destination": "/home/ec2-user/weave.tar"
  }, {
    "type": "file",
    "source": "to-upload/ecs.conf",
    "destination": "/home/ec2-user/ecs.conf"
  }, {
    "type": "file",
    "source": "to-upload/weave.conf",
    "destination": "/home/ec2-user/weave.conf"
  }, {
    "type": "file",
    "source": "to-upload/peers.sh",
    "destination": "/home/ec2-user/peers.sh"
  }, {
    "type": "shell",
    "inline": [
      "sudo yum -y remove ecs-init",
      "sudo rpm -i /home/ec2-user/ecs-init-1.3.0-1.el7.centos.x86_64.rpm",
      "rm /home/ec2-user/ecs-init-1.3.0-1.el7.centos.x86_64.rpm",
 
      "sudo yum -y install python-pip jq",
      "sudo python-pip install awscli",

      "sudo curl -L https://raw.githubusercontent.com/weaveworks/weave/master/weave -o /usr/local/bin/weave",
      "sudo chmod +x /usr/local/bin/weave",
      "sudo docker load < /home/ec2-user/weave.tar",
      "sudo rm /home/ec2-user/weave.tar",

      "sudo mv /home/ec2-user/weave.conf /etc/init/weave.conf",
      "sudo mv /home/ec2-user/ecs.conf /etc/init/ecs.conf",
      
      "sudo mkdir /etc/weave",
      "sudo mv /home/ec2-user/peers.sh /etc/weave/peers.sh",
      "sudo chmod +x /etc/weave/peers.sh"
    ]
  }]

}
