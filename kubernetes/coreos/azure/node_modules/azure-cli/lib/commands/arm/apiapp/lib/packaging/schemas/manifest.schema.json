{
    "id": "http://schema.management.azure.com/schemas/2015-04-15/apiapp.json#",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "ApiApp Package Manifest file schema",
    "type": "object",
    "properties": {
      "$schema": {
        "type": "string"
      },
      "id": {
        "type": "string",
        "minLength": 8,
        "maxLength": 50,
        "pattern": "^[A-Za-z0-9][A-Za-z0-9\\.]*$"
      },
      "namespace": {
        "type": "string",
        "pattern": "^[\\w\\.]+$"
      },
      "version": {
        "$ref": "#semVer"
      },
      "gateway": {
        "type": "string"
      },
      "title": {
        "type": "string",
        "minLength": 1
      },
      "summary": {
        "type": "string",
        "minLength": 1,
        "maxLength": 100
      },
      "description": {
        "type": "string",
        "maxLength": 1500
      },
      "author": {
        "type": "string",
        "minLength": 1,
        "maxLength": 256
      },
      "homepage": {
        "type": "string"
      },
      "execution": {
        "type": "string",
        "enum": [ "site", "continuous", "codeless"]
      },
      "dependencies": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "minLength": 8,
              "maxLength": 50,
              "pattern": "^[A-Za-z0-9][A-Za-z0-9\\.]*$"
            },
            "namespace": {
              "type": "string",
              "pattern": "^[\\w\\.]+$"
            },
            "version": {
              "$ref": "#semVer"
            }
          }
        }
      },
      "endpoints": {
        "type": "object",
        "properties": {
          "apiDefinition": {
            "type": "string"
          },
          "status": {
            "type": "string"
          }
        }
      },

      "categories": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": [ "social", "enterprise", "integration", "protocol", "app-datasvc", "other" ]
        }
      },
      "license": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string"
          },
          "requireAcceptance": {
            "type": "boolean"
          }
        },
        "required": [ "type" ]
      },

      "links": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "minLength": 1
            },
            "url": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": [ "text", "url" ]
        },

        "authentication": {
          "type": "array",
          "items": {
            "type": "object",

            "properties": {
              "type": {
                "type": "string",
                "minLength": 1
              },
              "scopes": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [ "type" ]
          },
          "maxItems": 1
        },

        "copyright": {
          "type": "string"
        },

        "brandColor": {
          "type": "string"
        },

        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "required": [
      "id", "namespace", "version", "title", "gateway", "summary", "author"
    ]
}